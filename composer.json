{
    "name": "bartroos/fred",
    "description": "Forum engine (v1 work-in-progress).",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpunit/phpunit": "^11"
    },
    "autoload": {
        "psr-4": {
            "Fred\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fred\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes --dry-run --diff",
        "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "migrate": "php bin/migrate",
        "migrate:fresh": "php bin/migrate --fresh",
        "seed": "php bin/seed",
        "serve": "php -S localhost:8000 -t public public/index.php",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
